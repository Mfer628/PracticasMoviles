        android:layout_marginRight="5dp"
        />
    <Button
        android:text="6"
        android:layout_rowSpan="3"
        android:layout_gravity="fill"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        />
    <Button
        android:text="7"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
    <Button
        android:text="8"
        android:layout_marginLeft="5dp"
